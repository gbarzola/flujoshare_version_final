<%= render 'procesos/nav' %>
<main role="main" class="container">
<div class="my-3 p-3 bg-white rounded box-shadow">
<br>
<h2><i class="far fa-check-circle"></i> Procesos Aceptados [<%=Record.count%>]</h2>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Commits</th>
      <th>Status</th>
      <th>Contribuidores</th>
      <th>Version</th>
      <th>Creado Por</th>
      <th>Fecha Creado</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <% if record.proceso.status == 'Aceptado' %>
        <td><%= record.proceso.nombre %></td>
        <td><%= record.proceso.commits %></td>
        <td>
              <button type="button" class="btn <% if record.proceso.status == 'Pendiente' %> btn-outline-warning <% elsif record.proceso.status == 'Rechazado' %> btn-outline-danger <% else %> btn-outline-success <% end %>"  disabled>
                <%= record.proceso.status %>
              </button>
        </td>
        <td><%= record.proceso.contribuidores %></td>
        <td><%= record.proceso.version %></td>
        <td><%= record.proceso.user.email %></td>
        <td><%= record.proceso.created_at %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</main>